    <script>
        function trackClick(username, label) {
            fetch('/api/analytics/click', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ username, linkLabel: label })
            });
        }

        function trackAdClick(username, adId) {
            fetch('/api/analytics/ad-click', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ username, adId })
            });
        }

        // Track view on load
        fetch('/api/analytics/view', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ username: 'khxzi' })
        });

        // Music Control
        const audio = document.getElementById('bgAudio');
        const btn = document.getElementById('playBtn');
        
        if (audio) {
            audio.volume = 0.5;
            
            // Try auto play
            const playPromise = audio.play();
            if (playPromise !== undefined) {
                playPromise.catch(error => {
                    // Auto-play was prevented
                    console.log('Autoplay prevented');
                });
            }
        }

        function toggleMusic() {
            if (audio.paused) {
                audio.play();
                btn.textContent = '⏸';
            } else {
                audio.pause();
                btn.textContent = '▶';
            }
        }
    </script>
